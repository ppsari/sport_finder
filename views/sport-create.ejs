<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <%- include partials/head.ejs %>
  </head>
  <body>
    <%- include partials/header.ejs %>
    <div class="container">
      <h1>Create Sport for <%- venue_name %></h1>
      <form class="col s12" action="/admin/sport/insert/?venue_id=<%- venue_id %>" method="post">
        <div class="row">
          <div class="input-field col s12">
            <input value="<%- venue_id %>" id="venue_id" type="hidden" class="validate" name="venue_id">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="name" type="text" class="validate" name="name" required>
            <label for="name">Sport Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="img_sport" type="url" class="validate" name="img" required  onfocusout="fillImg()">
            <label for="img_sport">Image</label>
          </div>
        </div>
        <div class="input-field col s12">
          <img src="" id="shw_img_sport" class="responsive-img"/>
        </div>
        <div class="row center-align">
          <button class="btn waves-effect waves-light" type="submit" name="button">Create</button>
        </div>
      </form>
    </div>
    <%- include partials/footer.ejs %>
  </body>
</html>
